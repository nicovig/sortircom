<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css"/>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="{{ path('home') }}">Sortir.com</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav ml-auto">
            {% if( is_granted('IS_AUTHENTICATED_REMEMBERED') ) %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('cities') }}">Villes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('site') }}">Sites</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('update_profile') }}">Mon profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">Se deconnecter</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('create_outing') }}">Créer une sortie</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>

<div class="container">
    {% if app.user %}
        <div class="row">
            <p class="mx-auto stylePseudo">Bienvenue {{ app.user.pseudo }}</p>
        </div>
    {% endif %}
    {% block body %}

    {% endblock %}
    <footer>
        <p>Réalisé par Anaïs, Nicolas, Julien &copy; </p>
    </footer>
</div>
{% block javascripts %}
    <script>
        function refresh() {
            window.location.href='{{ path('home') }}';
        }
    </script>
{% endblock %}
</body>

</html>


